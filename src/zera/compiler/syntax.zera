(define-type Keyword
  [ns name]
  Atomic
  Symbolic
  (toJS [self]
    (let [ns (.-ns self)]
      (str "zera.core.keyword("
           (if ns (str "\"" ns "\"") "null")
           ", "
           (str "\"" (.-name self)) "\")"))))


