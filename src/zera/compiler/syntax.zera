(define-type Set
  [value]
  Collection
  (toJS [self]
    (let [coll (.-value self)]
      (if (empty? coll)
        "zera.core.set()"
        (str "zera.core.set(["
          (->> (.-value self)
               (map (lambda [x] (.toJS x)))
               (join ", ")) "])")))))

