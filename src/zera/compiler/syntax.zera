(define-type Map
  [value]
  Collection
  (toJS [self]
    (let [coll (.-value self)]
      (if (empty? coll)
        "zera.core.hashMap()"
        (str "zera.core.hashMap("
          (->> (.-value self)
               (map (lambda [x] (str (.toJS (x 0)) ", " (.toJS (x 1)))))
               (join ", ")) ")")))))

;(define-function map?
;  [x]
;  (isa? x Map))

(define-type Vector
  [value]
  Collection
  (toJS [self]
    (let [coll (.-value self)]
      (if (empty? coll)
        "zera.core.vector()"
        (str "zera.core.vector("
          (join ", " (map (& (.toJS %)) (.-value self))) ")")))))

;(define-function vector?
